<Window x:Class="CapstoneLayoutTest.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapstoneLayoutTest"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="130" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="progressBar" Height="20" Margin="10,50,10,0" VerticalAlignment="Top"  Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Loading Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" />

    </Grid>
</Window>
